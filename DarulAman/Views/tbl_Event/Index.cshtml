@model IEnumerable<DarulAman.Models.tbl_Event>

@{
    ViewBag.Title = "Index";
}

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Index</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">

        <div class="col-lg-6 col-md-6 col-sm-6">
            <p class="heading">Events</p>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">

            <a style="float:right;" class="btn btn-outline-info btn-lg" href="@Url.Action("Create", "tbl_Event")"><b>Create New</b> </a>
        </div>

    </div>
</div>
<br />
<div class="midde_cont">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">

                        </div>
                    </div>
                    <div class="table_section padding_infor_info">
                        <div class="table-responsive-sm">
                            <table class="table table-active table-bordered">
                                <tr>
                                    <th>
                                        EVENT_NAME
                                    </th>
                                    <th>
                                        EVENT_DATE
                                    </th>
                                    <th>
                                        EVENT_DESCRIPTION
                                    </th>
                                    <th>
                                        EVENT_PICTURE
                                    </th>
                                    <th>
                                        TIME_TO
                                    </th>
                                    <th>
                                        TIME_FROM
                                    </th>
                                    <th>
                                        ADDRESS
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EVENT_NAME)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EVENT_DATE)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EVENT_DESCRIPTION)
                                        </td>
                                        
                                        <td>
                                            <img width="100" height="100" src="@Url.Content(item.EVENT_PICTURE)" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TIME_TO)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TIME_FROM)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ADDRESS)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "tbl_Event", new { id=item.EVENT_ID})">
                                                <i class="fa fa-edit btn btn-success  "></i>
                                            </a>|
                                            <a href="@Url.Action("Details", "tbl_Event", new { id=item.EVENT_ID})">
                                                <i class="fa fa-book btn btn-warning"></i>
                                            </a>|
                                            <a href="@Url.Action("Delete", "tbl_Event", new { id=item.EVENT_ID })">
                                                <i class="fa fa-trash btn btn-danger"></i>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
