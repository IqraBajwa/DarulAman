@model DarulAman.Models.tbl_Event

@{
    ViewBag.Title = "Create";
}

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Create</h2>
                </div>
            </div>
        </div>
    </div>
