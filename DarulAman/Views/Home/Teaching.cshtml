<!-- Contact End -->
<div class="single">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="single-content">
                    <div class="carousel-text">
                        <h2 style=" color: #FDBE33">Moschee (Eine Grundschule) </h2><br />
                        <div class="sidebar">
                            <div class="sidebar-widget">

                                <div class="text-widget">
                                    <p>
                                        <ul style="font-size:x-large;color:black">
                                            <li> Koran & Hadith (Ein Lebenshandbuch)</li>
                                            <li>Getrennte Lerneinheiten für Frauen und Männer.</li>

                                            <li>Islamische Schule für Jungen und Mädchen</li>
                                        </ul>
                                    </p>

                                </div>
                            </div>
                        </div>

                    </div><hr />

                </div>

            </div>

            <div class="col-lg-6">

                <div class="comment-form">
                    <center> <h2 style="color:orange">Leave a comment</h2></center><br />

                    <form action="/Home/Teaching" method="post">
                        <div class="form-group">
                            <label for="name"> First Name *</label>
                            <input type="text" class="form-control" name="FIRST_NAME" id="name" required="required" style="cursor:auto"/>
                        </div>
                        <div class="form-group">
                            <label for="name"> Last Name *</label>
                            <input type="text" class="form-control" name="LAST_NAME" id="name" required="required" style="cursor:auto"/>
                        </div>
                        <div class="form-group">
                            <label for="tel#">Contact# *</label>
                            <input type="number" class="form-control" pattern="^\s*\(?(020[7,8]{1}\)?[ ]?[1-9]{1}[0-9{2}[ ]?[0-9]{4})|(0[1-8]{1}[0-9]{3}\)?[ ]?[1-9]{1}[0-9]{2}[ ]?[0-9]{3})\s*$" name="CONTACT" id="tel#" required="required" style="cursor:auto" />
                        </div>
                        <div class="form-group">
                            <label for="email">Email *</label>
                            <input type="email" class="form-control" name="EMAIL" id="email" style="cursor:auto" />
                        </div>
                        <div class="form-group">
                            <label for="id">ID *</label>
                            <input type="text" class="form-control" name="ID" id="idfor" style="cursor:auto" />
                            <div id="message" style="color:red"></div>
                        </div>
                        <div class="form-group">
                            <p>Gender *</p>


                            <div>
                                <input type="radio" id="female" class="custom-radio" name="GENDER" value="Female">&nbsp;
                                <label for="female">Female</label><br>
                                <input type="radio" id="male" name="GENDER" class="custom-radio" value="Male">&nbsp;
                                <label for="male">Male</label><br>

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Origin">Origin *</label>
                            <input type="text" class="form-control" id="Origin" name="ORIGIN" required="required" style="cursor:auto" />
                        </div>
                        <div class="control-group">
                            <label for="Address">Address *</label>
                            <textarea class="form-control" name="ADDRESS" id="Address" required="required" style="cursor:auto"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="text">Guardian *</label>
                            <input type="text" class="form-control" name="GUARDIAN" id="Guardian" required="required" style="cursor:auto" />
                        </div>
                        <div class="form-group">
                            <label for="reason" placeholder="Chose Course">Course *</label>

                            <select class="form-control" id="reason" name="COURSE">
                                @foreach (var c in Model)
                                {
                                    <option>@c.COURSE_NAME</option>
                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="message">Message </label>
                            <textarea id="message" cols="30" rows="5" name="MESSAGE" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" required style="cursor:auto" />
                            <span>
                                I Accept the <a href="@Url.Action("Privacypolicy","Home")" style="color:#FDBE33 " required="required" style="cursor:auto" /><b>Terms and Conditions</b></a>
                            </span>
                        </div>
                        <br />

                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-custom btn-block">
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
<!---------------Scripting function-------------------->
<script type="text/javascript">
    function funvalid() {
        var e = document.getElementById("idfor").value;
        var m = document.getElementById("message");
        if (e <= 14) {
            m.innerText = "successful";
            m.style.color = "Green";
            return true;
        }
        else {

            m.innerText = "ID must be less than 14 digits";
            m.style.color = "Red";
        }
    }
</script>