                        </div>
                        <div class="form-group">
                            <label for="tel">Contact# *</label>
                            <input type="number" class="form-control" pattern="/^[+]?(1\-|1\s|1|\d{3}\-|\d{3}\s|)?((\(\d{3}\))|\d{3})(\-|\s)?(\d{3})(\-|\s)?(\d{4})$/g" name="CONTACT" id="tel" style="cursor:auto" />
                        </div>
                        <div class="form-group">
                            <label for="email">Email *</label>
                            <input type="email" class="form-control" name="EMAIL" id="email" required="required" style="cursor:auto" />
                        </div>
                        <div class="form-group">
                            <label for="id">ID *</label>
                            <input type="text" id="idfor" class="form-control" name="ID" required="required" style="cursor:auto" onkeypress="return funvalid()"/>
                            <div id="message" style="color:red"></div>
                        </div>
                        <div class="form-group">
                            <label for="date">Date of Marriage *</label>
                            <input type="date" class="form-control" name="DATE" id="txtdateofreservation" required="required" style="cursor:auto" />
                        </div>
                        <div class="form-group">
