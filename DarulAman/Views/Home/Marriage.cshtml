                            <input type="text" class="form-control" name="ORIGIN" id="Origin" style="cursor:auto" />
                        </div>
                        <div class="form-group">
                            <label for="message">Message </label>
                            <textarea id="message" cols="30" rows="5" name="MESSAGE" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" required />
                            <span>
                                I Accept the <a href="@Url.Action("Privacypolicy","Home")" style="color:#FDBE33 " required="required"><b>Terms and Conditions</b></a>
                            </span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-custom btn-block" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
<!---------------Scripting function-------------------->
<script type="text/javascript">
    function funvalid() {
        var e = document.getElementById("idfor").value;
        var m = document.getElementById("message");
        if (e <= 14) {
            m.innerText = "Successful";
            m.style.color = "Green";
            return true;
        }
        else {

            m.innerText = "ID must be less than 14 digits";
            m.style.color = "Red";
        }
    }
</script>