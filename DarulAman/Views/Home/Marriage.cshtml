                    <form action="/Home/Marriage" method="post">
                        <div class="form-group">
                            <label for="name"> First Name *</label>
                            <input type="text" class="form-control" name="FIRST_NAME" id="name" style="cursor:auto" />
                        </div>
                        <div class="form-group">
